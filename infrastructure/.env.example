# UltraThink Pilot - Infrastructure Environment Variables
# Copy to .env and customize for your environment

# PostgreSQL/TimescaleDB
POSTGRES_PASSWORD=changeme_in_production
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ultrathink_experiments
POSTGRES_USER=ultrathink

# MLflow
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_BACKEND_STORE_URI=postgresql://ultrathink:changeme_in_production@localhost:5432/ultrathink_experiments
MLFLOW_DEFAULT_ARTIFACT_ROOT=/mlflow/artifacts

# Grafana
GRAFANA_PASSWORD=admin
GRAFANA_HOST=localhost
GRAFANA_PORT=3000

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_MAXMEMORY=2gb

# Prometheus
PROMETHEUS_HOST=localhost
PROMETHEUS_PORT=9090

# Application Settings
ENVIRONMENT=development
LOG_LEVEL=INFO
CACHE_TTL_SECONDS=300
MAX_CACHE_SIZE_MB=1024

# API Keys (for data providers)
# Add your API keys here if needed
# ALPHA_VANTAGE_API_KEY=your_key_here
# POLYGON_API_KEY=your_key_here
